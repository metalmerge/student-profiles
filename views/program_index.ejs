<%- include('partials/header'); %>
<div>
<% if (programs.length > 0) { %>
	<table class="table">
		<thead class="thead-dark">
			<tr>
				<th>Title</th>
                <th>Description</th>
                <th>Location</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Minimum Grade Level</th>
				<th>Maximum Grade Level</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
		<% for (let i = 0; i < programs.length; i++) { %>
			<tr>
				<td><%= programs[i].title %></td>
                <td><%= programs[i].description %></td>
                <td><%= programs[i].location %></td>
                <td><%= programs[i].start_date %></td>
                <td><%= programs[i].end_date %></td>
                <td><%= programs[i].min_grade_level %></td>
                <td><%= programs[i].max_grade_level %></td>
				<td>
					<%= programs[i].student_list %>
				</td>
				<td>
					<a href="/program_edit/<%= programs[i].id %>" class="btn btn-sm btn-success">Edit</a>
					<a href="/program_delete/<%= programs[i].id %>" class="btn btn-sm btn-danger">Delete</a>
				</td>
			</tr>
		<% } %>
		</tbody>
	</table>
<% } else { %>
	<p class="text-center">No programs found.</p>
<% } %>
</div>
</div>
</body>
</html>